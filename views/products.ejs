<style>
    .page-horizontal-slider {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        overflow-y: visible;
        overflow-x: scroll;
        max-width: 100vw;    
        width: 100vw;
        margin: 0 auto;
